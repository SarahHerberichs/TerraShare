{% for label, messages in app.flashes %}

    {% for message in messages %}
    <div class="alert alert-{{label}} alert-dismissible fade show p-3 w-50 mx-auto mt-3" role="alert">
        <strong class="alert-message">{{message|raw}}</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endfor %}

{% endfor %}

{% for type, message_list in app.flashes %}
    {% for message in message_list %}
        <div class="notification is-{{ type }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

{% if csrf_error_message is defined %}
    <div class="alert alert-danger alert-dismissible fade show p-3 w-50 mx-auto mt-3" role="alert">
        <strong class="alert-message">{{ csrf_error_message }}</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endif %}